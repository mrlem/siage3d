<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/upArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_button"
        android:contentDescription="@null"
        android:padding="16dp"
        android:rotation="270"
        android:src="@drawable/ic_arrow"
        android:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/downArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:background="@drawable/bg_button"
        android:contentDescription="@null"
        android:padding="16dp"
        android:rotation="90"
        android:src="@drawable/ic_arrow"
        android:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/upArrow"
        app:layout_constraintEnd_toEndOf="@id/upArrow"
        app:layout_constraintStart_toStartOf="@id/upArrow" />

    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/bg_button"
        android:contentDescription="@null"
        android:padding="16dp"
        android:rotation="180"
        android:src="@drawable/ic_arrow"
        android:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/upArrow"
        app:layout_constraintBottom_toBottomOf="@id/downArrow"
        app:layout_constraintEnd_toStartOf="@id/upArrow" />

    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/bg_button"
        android:contentDescription="@null"
        android:padding="16dp"
        android:rotation="0"
        android:src="@drawable/ic_arrow"
        android:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/upArrow"
        app:layout_constraintBottom_toBottomOf="@id/downArrow"
        app:layout_constraintStart_toEndOf="@id/upArrow" />

</androidx.constraintlayout.widget.ConstraintLayout>